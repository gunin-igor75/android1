<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/page"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="0dp"
        app:contentPadding="@dimen/_16sdp">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/GothamProReg.17sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/photo_title"
            android:textAlignment="center"
            android:textColor="@color/text_company" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvDocument"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:contentPadding="@dimen/_16sdp">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/GothamProReg.17sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/document_title"
            android:textAlignment="center"
            android:textColor="@color/text_company" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:contentPadding="@dimen/_16sdp"
        app:strokeWidth="1dp">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/GothamProMed.17sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/cancel_title"
            android:textAlignment="center"
            android:textColor="@color/orange" />
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>