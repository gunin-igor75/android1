<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvContactsInfoTitle"
        style="@style/GeometriaBold.20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/contacts_info"
        android:textAlignment="center"
        android:lineSpacingMultiplier="1.2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vVerticalLine"
        android:layout_width="2dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvContactsInfoTitle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvContactsInfoEmail"
        style="@style/GeometriaReg.32sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/email_text"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vVerticalLine" />
</androidx.constraintlayout.widget.ConstraintLayout>