<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingHorizontal="@dimen/padding_app">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvJoinTeamTitle"
        style="@style/GothamProBold.28sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        android:lineSpacingMultiplier="1.2"
        android:text="@string/join_team"
        android:textColor="@color/orange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvJoinTeamSlogan"
        style="@style/GothamProReg.16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_24sdp"
        android:lineSpacingMultiplier="1.2"
        android:text="@string/slogan_team"
        android:textColor="@color/text_company"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvJoinTeamTitle" />

    <ImageView
        android:id="@+id/ivDecor4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:contentDescription="@string/image_ellipse_description"
        android:src="@drawable/im_ellipse_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvJoinTeamSlogan" />

</androidx.constraintlayout.widget.ConstraintLayout>